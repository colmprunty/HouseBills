@model HouseBills.Models.DebtModel 

<h2>Create Debt For One Person</h2>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>Person: </td>
            <td>@Html.DropDownListFor(x => x.PersonId, Model.People)</td>
        </tr>
        <tr>
            <td>Amount: </td>
            <td>@Html.TextBoxFor(x => x.Amount)</td>
        </tr>
        <tr>
            <td>Description: </td>
            <td>@Html.TextBoxFor(x => x.Description)</td>
        </tr>
    </table>
    
    <p>
        <input type="submit" value="Create" />
    </p>
}